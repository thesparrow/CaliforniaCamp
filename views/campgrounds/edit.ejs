<% include ../partials/header%>
<h1> Edit Form</h1>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="image">Campground name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" aria-describedby="basic-addon2">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>" aria-describedby="basic-addon2">
                </div>
                <div class="form-group">
                    <label for="description">Campground description</label>
                    <textarea class="form-control" rows="12" name="campground[description]"><%=campground.description%></textarea>
                    <!--<input class="form-control" type="text" name="description" placeholder="<%=campground.description%>">-->
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>